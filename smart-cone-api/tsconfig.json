{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "types": ["node"],
        "typeRoots": [ "node_modules/@types" ]
    },
    "include": ["src/**/*", "./src/javascript/**/*"],
    "exclude": ["node_modules"]
}
