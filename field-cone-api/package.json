{
    "name": "field-cone-api",
    "version": "0.0.1",
    "description": "Field Cone API for Field Trainer",
    "author": "Keaton Freude <freudek90@gmail.com>",
    "license": "MIT",
    "scripts": {
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "build": "sudo rm -rf dist && tsc",
        "start:prod": "node dist/field-cone-api/src/main.js",
        "start:hmr": "node dist/server",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "webpack": "webpack --config webpack.config.js"
    },
    "dependencies": {
        "@nestjs/common": "^5.5.0",
        "@nestjs/core": "^5.5.0",
        "@nestjs/microservices": "^5.5.0",
        "@nestjs/testing": "^5.5.0",
        "@nestjs/websockets": "^5.5.0",
        "@types/socket.io-client": "^1.4.32",
        "fastify-formbody": "^2.0.3",
        "play-sound": "^1.1.3",
        "reflect-metadata": "^0.1.12",
        "rpi-gpio": "^2.1.2",
        "rxjs": "^6.3.3",
        "socket.io-client": "^2.2.0",
        "typescript": "^3.2.2"
    },
    "devDependencies": {
        "@types/express": "^4.0.39",
        "@types/jest": "^23.3.12",
        "@types/node": "^10.12.18",
        "@types/supertest": "^2.0.7",
        "jest": "^23.6.0",
        "nodemon": "^1.18.9",
        "prettier": "^1.15.3",
        "supertest": "^3.3.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.3",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.7.0",
        "tslint": "5.12.0",
        "webpack": "^4.28.1",
        "webpack-cli": "^3.2.1",
        "webpack-node-externals": "^1.6.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage"
    }
}
